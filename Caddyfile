https://bushidoboy.com, https://bushidoboy.xyz {
    root /var/www/public
    gzip
    git {
        repo     https://github.com/donniebishop/website.git
        branch   master
        path     /var/www/website
        interval 1800
        then     hugo --destination=/var/www/public
        # Set HUGO_ENV=production in service file ^
    }
    cache {
        default_max_age 15m
    }
    tls {
       # Cloudflare credentials need to be set as an env variables
       # Best to do it via the systemd service file for caddy
       dns cloudflare
    }
}
